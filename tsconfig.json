{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",                    
    "baseUrl": "./src",
    "paths": {
      "@Routes/*": ["Routes/*"],
      "@Schemas/*": ["Schemas/*"],
      "@Middlewares/*": ["Middlewares/*"],
      "@Helpers/*": ["Helpers/*"],
      "@Configs/*": ["Configs/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
